#:kivy 1.0
<inclement>:
    orientation:'vertical'
    id: Calculadora
    display: texto
    rows: 5
    padding: 5
    spacing: 5
    TextInput:
        id: texto
        font_size: 30
        multiline: False
    BoxLayout:
        id:box79
        orientation:'horizontal'
        Button:
            id:botao7
            text:'7'
            font_size:30
            on_release: texto.text = texto.text + botao7.text
        Button:
            id:botao8
            text:'8'
            font_size:30
